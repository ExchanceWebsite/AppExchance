<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/view_pesquisa"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_status"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/view_pesquisa"
        android:text="@string/reservado"
        android:textColor="@color/reservado"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_um"
        android:layout_width="300dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/view_pesquisa"
        android:scaleType="centerCrop"
        android:src="@drawable/img_pesq_host" />

    <TextView
        android:id="@+id/text_familia"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:text="@string/usuario_host2" />

    <TextView
        android:id="@+id/text_desc"
        style="@style/TextAppearance.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="12dp"
        android:text="Descrição" />


</androidx.appcompat.widget.LinearLayoutCompat>